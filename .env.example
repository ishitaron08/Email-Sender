# ─── Database ───────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=dispatch_admin
DB_PASSWORD=dispatch_secret
DB_NAME=dispatch_db
DATABASE_URL=postgresql://dispatch_admin:dispatch_secret@localhost:5432/dispatch_db

# ─── Redis ──────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ─── Google OAuth ───────────────────────────────────────
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# ─── JWT ────────────────────────────────────────────────
JWT_SECRET=replace-with-a-strong-random-string
JWT_EXPIRY=7d

# ─── Ethereal SMTP (auto-generated on first run) ───────
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ─── Rate Limiting ──────────────────────────────────────
MAX_EMAILS_PER_HOUR=50

# ─── Server ─────────────────────────────────────────────
API_PORT=4000
FRONTEND_URL=http://localhost:3000
NODE_ENV=development
